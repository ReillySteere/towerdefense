{
  "name": "rise-of-the-machines",
  "scripts": {
    "build": "npm run build:server && npm run build:ui",
    "build:ui": "webpack --config webpack.browser.js --mode production",
    "build:server": "nest build",
    "test": "npm run test:server && npm run test:ui",
    "cypress:open": "cypress open",
    "start": "concurrently \"npm run start:server:dev \" \"start:ui\"",
    "start:ui": "webpack serve --config webpack.browser.js --mode development",
    "start:server:debug": "nest start --debug --watch",
    "start:server:dev": "cross-env NODE_ENV=development nest start --entryFile=server/main --watch",
    "start:server:prod": "node dist/server/main",
    "test:server": "jest --config jest.node.ts --coverage",
    "test:ui": "jest --config jest.browser.ts --coverage",
    "lint": "npm run lint:server && npm run lint:ui",
    "lint:ui": "eslint 'src/**/*.{ts,tsx}' --fix",
    "lint:server": "eslint \"{server|shared}/{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "npm run format:server && npm run format:ui",
    "format:server": "prettier --write \"{server|shared}/src/**/*.ts\" \"test/**/*.ts\"",
    "format:ui": "prettier --write 'ui/src/**/*.{ts,tsx,js,jsx,json,css,md}'"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.14",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "babel-loader": "^10.0.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "cypress": "^14.2.1",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "globals": "^16.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-fixed-jsdom": "^0.0.9",
    "prettier": "^3.5.3",
    "sass": "^1.86.0",
    "sass-loader": "^16.0.5",
    "source-map-support": "^0.5.21",
    "style-loader": "^4.0.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.3.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.20.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "@sentry/react": "^9.10.1",
    "@sentry/tracing": "^7.120.3",
    "@sentry/webpack-plugin": "^3.2.4",
    "@tanstack/react-query": "^5.71.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "phaser": "3.60",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.22",
    "zustand": "^5.0.3"
  }
}
