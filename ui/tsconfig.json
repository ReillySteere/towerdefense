{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "frontend/*": ["src/*"]
    },
    "target": "es5",
    "lib": ["dom", "ESNext"],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "@testing-library/jest-dom", "node", "@types/jest"]
  },
  "include": ["src", "types", "jest.setup.js", "**/*.test.ts", "**/*.test.tsx"]
}
