{
  "extends": "./tsconfig",
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "module": "CommonJS",
    "useUnknownInCatchVariables": false,
    "strictPropertyInitialization": false,
    "types": [
      "jest",
      "node",
      "@testing-library/jest-dom",
      "@testing-library/react",
      "@types/node"
    ]
  },
  "include": ["**/*.test.ts"],
  "exclude": ["node_modules", "dist", "node_modules/cypress"]
}
